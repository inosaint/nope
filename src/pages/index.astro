    <!-- Theme Modal -->
    <Modal id="theme-modal" title="Select Theme">
      <div class="theme-grid">
        <button data-theme="sunflowers" class="theme-card active">
          <div class="theme-preview">
            <img src="/assets/sunflowers.jpg" alt="Sunflowers" />
          </div>
