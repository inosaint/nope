---
interface Props {
  date: string;
  title: string;
  description: string;
  link?: string;
  images: { src: string; alt: string }[];
  layout?: 'single' | 'double';
}

const { date, title, description, link, images, layout = 'single' } = Astro.props;
---

<article class="space-y-4">
  <time class="text-gray-500 text-sm">{date}</time>

  <div class="prose max-w-2xl">
    {link ? (
      <a href={link} target="_blank" rel="noopener noreferrer" class="font-medium hover:underline">
        {title}
      </a>
    ) : (
      <span class="font-medium">{title}</span>
    )}
    <span> â€” {description}</span>
  </div>

  <div class={layout === 'double' ? 'grid md:grid-cols-2 gap-4' : 'grid grid-cols-1'}>
    {images.map((image) => (
      <img
        src={image.src}
        alt={image.alt}
        loading="lazy"
        width="800"
        height="600"
        class="w-full"
      />
    ))}
  </div>
</article>
