---
interface Props {
  date: string;
  title: string;
  description: string;
  link?: string;
  images?: { src: string; alt: string }[];
  layout?: 'single' | 'double';
}

const { date, title, description, link, images, layout = 'single' } = Astro.props;
---

<article>
  <time>{date}</time>

  <div class="project-content">
    {link ? (
      <a href={link} target="_blank" rel="noopener noreferrer">
        <strong>{title}</strong>
      </a>
    ) : (
      <strong>{title}</strong>
    )}
    <span> â€” {description}</span>
  </div>

  {images && images.length > 0 && (
    <div class={`images ${layout}`}>
      {images.map((image) => (
        <img src={image.src} alt={image.alt} loading="lazy" width="800" height="600" />
      ))}
    </div>
  )}
</article>

<style>
  article {
    margin-bottom: 3rem;
  }

  time {
    display: block;
    color: #6b7280;
    font-size: 0.875rem;
    margin-bottom: 1rem;
  }

  .project-content {
    margin-bottom: 1.5rem;
    max-width: 42rem;
  }

  strong {
    font-weight: 500;
  }

  /* Dark theme support */
  html[data-theme="starry-night"] time {
    color: #9ca3af;
  }

  html[data-theme="starry-night"] img {
    outline-color: rgba(255, 255, 255, 0.2);
  }

  /* Sunflowers theme */
  html[data-theme="sunflowers"] time {
    color: #78716c;
  }

  html[data-theme="sunflowers"] img {
    outline-color: rgba(41, 37, 36, 0.2);
  }

  .images {
    display: grid;
    gap: 1.5rem;
  }

  .images.double {
    grid-template-columns: 1fr;
  }

  @media (min-width: 768px) {
    .images.double {
      grid-template-columns: 1fr 1fr;
    }
  }

  img {
    width: 100%;
    height: auto;
    outline: 1px solid rgba(0, 0, 0, 0.1);
    outline-offset: -1px;
  }
</style>
